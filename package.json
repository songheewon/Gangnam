{
  "name": "gangnam",
  "description": "블루닷 강남(Gangnam) 테마",
  "version": "1.0.2",
  "engines": {
    "ghost": ">=4.0.0"
  },
  "keywords": [
    "ghost-theme"
  ],
  "scripts": {
    "postinstall": "bower install"
  },
  "devDependencies": {
    "@primer/css": "^15.2.0",
    "clipboard": "^2.0.8",
    "concat": "^3.0.0",
    "evil-icons": "^1.10.1",
    "fs": "0.0.2",
    "gulp-autoprefixer": "^4.1.0",
    "gulp-clean-css": "^3.10.0",
    "gulp-concat": "^2.6.0",
    "gulp-jshint": "^2.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^1.4.0",
    "gulp-replace": "^0.6.1",
    "gulp-size": "^3.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-util": "^3.0.7",
    "jshint": "^2.12.0",
    "jshint-stylish": "^2.2.0",
    "lazysizes": "^5.3.2",
    "normalize.css": "^8.0.1",
    "prismjs": "^1.23.0",
    "run-sequence": "^2.2.1",
    "sass-mq": "^5.0.1",
    "dart-sass": "^1.25.0",
    "gulp": "^4.0.2",
    "gulp-rtlcss": "^1.4.2",
    "gulp-sass": "^5.0.0",
    "gulp-zip": "^4.2.0",
    "node-sass": "^6.0.1",
    "sass": "^1.35.1"
  },
  "author": {
    "name": "Mediasphere",
    "email": "admin@mediasphere.kr",
    "url": "https://mediasphere.kr/"
  },
  "config": {
    "custom": {
      "home_hero_background_color": {
        "group": "homepage",
        "type": "color",
        "default": "#000000",
        "title": "홈 히어로 배경 색상"
      },
      "tag_slugs_for_home_sections": {
        "group": "homepage",
        "type": "text",
        "title": "홈 태그 목록",
        "description": "홈에 노출 시킬 태그의 슬러그(slug)를 따옴표(,)로 구분하여 입력하세요."
      },
      "home_top_section_1": {
        "group": "homepage",
        "type": "text",
        "title": "홈 상단 1",
        "description": "홈페이지 상단 좌측 영역의 제목입니다.",
        "default": "추천 강좌"
      },
      "home_top_section_1_type": {
        "group": "homepage",
        "type": "select",
        "options": [
          "포스트",
          "상품"
        ],
        "default": "상품",
        "title": "홈 상단 1 콘텐츠 형식",
        "description": "홈페이지 상단 좌측 영역에 표시할 콘텐츠 형식을 선택해주세요."
      },
      "home_top_section_2": {
        "group": "homepage",
        "type": "text",
        "title": "홈 상단 2",
        "description": "홈페이지 상단 우측 영역의 제목입니다.",
        "default": "인기 강좌"
      },
      "home_top_section_2_type": {
        "group": "homepage",
        "type": "select",
        "options": [
          "포스트",
          "상품"
        ],
        "default": "상품",
        "title": "홈 상단 2 콘텐츠 형식",
        "description": "홈페이지 상단 우측 영역에 표시할 콘텐츠 형식을 선택해주세요."
      },
      "shop_navigation_format": {
        "group": "shop",
        "type": "select",
        "options": [
          "type",
          "category"
        ],
        "default": "type",
        "title": "숍 네비게이션 선택",
        "description": "타입(type) 또는 카테고리(category) 형식의 네비게이션을 선택할 수 있습니다."
      },
      "newsletter_form_title" : {
        "group": "newsletter_form",
        "type": "text",
        "title": "뉴스레터 폼 제목",
        "default": "뉴스레터"
      }
    },
    "posts_per_page": 12
  }
}
